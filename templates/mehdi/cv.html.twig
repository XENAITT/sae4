{% extends 'base.html.twig' %}

{% block title %}CV{% endblock %}

{% block body %}
<h1>CV</h1>

<form method="POST" action="{{ path('app_cv') }}">
    {% if error is defined %}
        <div style="color: red;">{{ error }}</div>
    {% endif %}

    <label for="name">Nom :</label>
    <input type="text" id="name" name="name" value="{{ data.name|default('') }}" required><br><br>

    <label for="surname">Prénom :</label>
    <input type="text" id="surname" name="surname" value="{{ data.surname|default('') }}" required><br><br>

    <label for="email">Adresse mail :</label>
    <input type="email" id="email" name="email" value="{{ data.email|default('') }}" required><br><br>

    <button type="submit">Envoyer</button>
</form>

<!--Message flash , il pop si c'est bien ou pas -->
{% for type, messages in app.flashes %}
    {% for message in messages %}
        <div class="flash-message flash-{{ type }}" style="margin-top: 20px; border: 1px solid #ccc; padding: 10px; border-radius: 5px;">
            {{ message }}
        </div>
    {% endfor %}
{% endfor %}

<!--Télécharger le CV -->
{% if app.session.flashBag.has('success') %}
    <div style="margin-top: 20px;">
        <a href="{{ asset('cv/CV_Mehdi.pdf') }}" download>Télécharger le CV</a>
    </div>
{% endif %}
{% endblock %}